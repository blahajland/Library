{
  "compilerOptions": {
    "module": "es2020",
    "target": "ES2020",
    "strict": true,
    "importHelpers": true,
    "declarationDir": "./dist/dts",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,
    "sourceMap": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "./dist"
  ]
}
